<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="1dp"
    android:id="@+id/card"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/whole_btn"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/ivProperty"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:background="@drawable/scenic"
             />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivProperty"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="â‚¹ 20,000" />

        <LinearLayout
            android:id="@id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ivProperty"
            android:weightSum="100">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"

                android:layout_weight="10"
                android:backgroundTint="#4D23C5B5"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:text="Flat"
                    android:textColor="@color/black" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="10"
                android:backgroundTint="#4D23C5B5"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="10sp"
                    android:text="Rent"
                    android:textColor="@color/black" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvPropertName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:text="Apurna Flats"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="6dp"
            android:paddingHorizontal="5dp"/>

        <TextView
            android:id="@+id/tvAreaAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPropertName"
            android:text="900 sqft | 2 BHK"
            android:textColor="@color/black"
            android:textStyle="bold"

            android:paddingHorizontal="5dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/tvAreaAbout"
            android:paddingHorizontal="5dp"
            android:text="AdilNagar, Lucknow" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>

